{
  "name": "type-challenges",
  "displayName": "type-challenges",
  "description": "training typescript skill",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:type-challenges",
    "onCommand:type-challenges.pickQuestion",
    "onCommand:type-challenges.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "tcq",
        "contents": "Refreshing... [Author](https://www.github.com/rain120).\n[Refresh](command:type-challenges.refresh)"
      }
    ],
    "commands": [
      {
        "command": "type-challenges.pickQuestion",
        "title": "Pick Question",
        "category": "type-challenges"
      },
      {
        "command": "type-challenges.refresh",
        "title": "Refresh Question",
        "icon": "public/assets/refresh.svg"
      }
    ],
    "keybindings": [
      {
        "command": "type-challenges",
        "key": "",
        "mac": ""
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "type-challenges.refresh",
          "icon": "public/assets/refresh.svg",
          "when": "view == type-challenges",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "type-challenges",
          "title": "Typescript 体操",
          "icon": "public/assets/logo.svg"
        }
      ]
    },
    "views": {
      "type-challenges": [
        {
          "id": "type-challenges",
          "name": "Typescript 体操",
          "contextualTitle": "Typescript 体操",
          "when": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "dev": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "dependencies": {
    "axios": "^0.27.2",
    "highlight.js": "^11.6.0",
    "markdown-it": "^13.0.1"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "typescript": "*",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
